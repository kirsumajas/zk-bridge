{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2020"],
    "module": "commonjs", 
    "target": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": false,
    "outDir": "./dist",
    "rootDir": "./packages"
  },
  "include": [
    "packages/relayer/**/*",
    "packages/sdk/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "packages/submission-manager/**/*",
    "packages/solana-program/**/*"
  ]
}